<Page x:Class="Grade_project.Pages.TeachersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="TeachersPage">

    <Page.Resources>
        <!-- Стиль для всех заголовков столбцов -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#FF4C4C50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="#FF6B6B70"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>

        <Style x:Key="FirstColumnHeaderStyle"
               TargetType="DataGridColumnHeader"
               BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
            <Setter Property="Background"
                    Value="#555555"/>
        </Style>

        <Style x:Key="LeftColumnCellStyle"
               TargetType="DataGridCell">
            <Setter Property="Background"
                    Value="#555555"/>
            <Setter Property="Foreground"
                    Value="AliceBlue"/>
            <Setter Property="Padding"
                    Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="#FF4C4C50"
                                BorderThickness="0,0,1,1">
                            <ContentPresenter VerticalAlignment="Center" Margin="5"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для всех строк -->
        <Style TargetType="DataGridRow">
            <Setter Property="Background"
                    Value="#FF2D2D30"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsSelected"
                         Value="True">
                    <Setter Property="Background"
                            Value="#FF5A5A60"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <DataGrid x:Name="TeachersDataGrid"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  Margin="10"
                  Background="#FF2D2D30"
                  Foreground="White"
                  BorderBrush="#FF4C4C50"
                  HorizontalGridLinesBrush="#FF4C4C50"
                  VerticalGridLinesBrush="#FF4C4C50"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding TeacherId}" />
                <DataGridTextColumn Header="Имя" Binding="{Binding FirstName}" />
                <DataGridTextColumn Header="Фамилия" Binding="{Binding LastName}" />
                <DataGridTextColumn Header="Отчество" Binding="{Binding MiddleName}" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="10"
                    Grid.Row="1">
            <!--<Button Content="Добавить" Click="AddTeacher_Click" Width="100" Margin="0,0,10,0"/>
            <Button Content="Редактировать" Click="EditTeacher_Click" Width="100" Margin="0,0,10,0"/>
            <Button Content="Удалить" Click="DeleteTeacher_Click" Width="100"/>-->
        </StackPanel>
    </Grid>
</Page>