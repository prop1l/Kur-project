    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="#111111"/>
    <SolidColorBrush x:Key="ContentBackgroundBrush" Color="#FFFFFF"/>

    <SolidColorBrush x:Key="TextForegroundBrush" Color="#333333"/>
    
