<Window x:Class="Grade_project.Windows.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:local="clr-namespace:Grade_project.Windows"
        mc:Ignorable="d"
        Height="720"
        Width="1080"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource ContentBackgroundBrush}">

    <Window.Resources>
        <!-- Базовый стиль для кнопок сайдбара -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{DynamicResource TextForegroundBrush}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource PrimaryButtonBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Базовый стиль для кнопок манипуляций окном -->
        <Style x:Key="WindowButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="35"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Foreground" Value="{DynamicResource TextForegroundBrush}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource PrimaryButtonBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="175"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <Border Grid.ColumnSpan="2"
                Background="{DynamicResource HeaderBackgroundBrush}"
                MouseDown="Window_Drag">
            <Grid HorizontalAlignment="Stretch">
                <Label x:Name="XID"
                       Content="Админ панель"
                       VerticalAlignment="Center"
                       Foreground="{DynamicResource TextForegroundBrush}"
                       FontSize="14"
                       Margin="10,0,0,0"/>
                <StackPanel HorizontalAlignment="Right"
                            Orientation="Horizontal"
                            Margin="0,0,4,0">
                    <Button Style="{StaticResource WindowButtonStyle}" 
                            Content="_"
                            FontWeight="Bold"
                            Click="Button_Min_Click"/>
                    <Button Style="{StaticResource WindowButtonStyle}" 
                            Content="◻"
                            FontWeight="Light"
                            Click="Button_Max_Click"/>
                    <Button Style="{StaticResource WindowButtonStyle}" 
                            Content="✕"
                            FontWeight="Black"
                            Click="Button_Close_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Левая боковая панель -->
        <Border Grid.Column="0"
                Grid.Row="1"
                Background="{StaticResource SidebarBackgroundBrush}"
                CornerRadius="0 10 10 0"
                Padding="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        Background="{DynamicResource SidebarBackgroundBrush}"
                        CornerRadius="0 10 10 0"
                        Padding="10">
                    <StackPanel Orientation="Vertical">
                        <!-- Кнопки для каждой сущности -->
                        <Button Style="{StaticResource SidebarButtonStyle}"
                                Content="Группы"
                                Tag="GroupsPage"
                                Click="EntityButton_Click"/>
                        <Button Style="{StaticResource SidebarButtonStyle}"
                                Content="Специальности"
                                Tag="SpecialitiesPage"
                                Click="EntityButton_Click"/>
                        <Button Style="{StaticResource SidebarButtonStyle}"
                                Content="Предметы"
                                Tag="SubjectsPage"
                                Click="EntityButton_Click"/>
                        <Button Style="{StaticResource SidebarButtonStyle}"
                                Content="Преподаватели"
                                Tag="TeachersPage"
                                Click="EntityButton_Click"/>
                        <Button Style="{StaticResource SidebarButtonStyle}"
                                Content="Пользователи"
                                Tag="UsersPage"
                                Click="EntityButton_Click"/>
                        <Button Style="{StaticResource SidebarButtonStyle}"
                                Content="Токены"
                                Tag="TokensPage"
                                Click="EntityButton_Click"/>
                        <Button Style="{StaticResource SidebarButtonStyle}"
                                Content="Информация"
                                Tag="UserInfosPage"
                                Click="EntityButton_Click"/>
                    </StackPanel>
                </Border>

                <Button Grid.Row="1"
                        x:Name="AdminButton"
                        Style="{StaticResource WindowButtonStyle}"
                        Content="Назад"
                        FontSize="18"
                        Foreground="{StaticResource TextForegroundBrush}"
                        Visibility="Visible"
                        Width="120"
                        Click="AdminButtonBack_Click"/>
                
                <!-- Профиль пользователя -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="35"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="25"/>
                    </Grid.ColumnDefinitions>

                    <!-- Использование относительного пути к изображению -->
                    <Image Source="C:\Users\User\source\repos\Grade project\Grade project\Image\Icon.jpg"
                           Height="35"
                           Width="35"
                           Grid.Column="0"/>

                    <StackPanel Orientation="Vertical"
                                VerticalAlignment="Center"
                                Grid.Column="1">
                        <Label Content="Тессст" 
                               Foreground="{StaticResource TextForegroundBrush}"/>
                    </StackPanel>

                    <!-- Кнопка настроек -->
                    <Button Grid.Column="2"
                            Style="{StaticResource WindowButtonStyle}"
                            Width="25" 
                            Height="25">
                        <fa:ImageAwesome Icon="Cog" 
                             Foreground="Bisque" 
                             Width="16" 
                             Height="16"/>
                    </Button>
                </Grid>
            </Grid>
        </Border>

        <!-- Основная область контента -->
        <Border Grid.Column="1"
                Grid.Row="1"
                Background="{DynamicResource ContentBackgroundBrush}"
                CornerRadius="10"
                Margin="10">
            <Frame x:Name="MainFrame"
                   NavigationUIVisibility="Hidden"/>
        </Border>
    </Grid>
</Window>