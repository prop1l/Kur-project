<Window x:Class="Grade_project.Windows.Auth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Grade_project.Windows"
        mc:Ignorable="d"
        Height="720"
        Width="1080"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#333333"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Базовый стиль для кнопок -->
        <Style x:Key="WindowButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="35"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Foreground" Value="LightGray"/>
            <Setter Property="Background" Value="#00FFFFFF"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Gray"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для текстовых полей -->
        <Style x:Key="InputBoxFieldStyle" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="LightGray"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <Style x:Key="InputPasswordBoxFieldStyle" TargetType="PasswordBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="LightGray"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition/>
            <RowDefinition Height="2.5*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <Border Grid.ColumnSpan="3" Background="#444444" MouseDown="Window_Drag">
            <Grid HorizontalAlignment="Stretch">
                <Label Content="Тут иконка скорее всего"
                       VerticalAlignment="Center"
                       Foreground="White"
                       FontSize="14"
                       Margin="10,0,0,0"/>
                <StackPanel HorizontalAlignment="Right"
                            Orientation="Horizontal"
                            Margin="0,0,4,0">
                    <Button Style="{StaticResource WindowButtonStyle}"
                            Content="_"
                            FontWeight="Bold"
                            Click="Button_Min_Click"/>

                    <Button Style="{StaticResource WindowButtonStyle}"
                            Content="◻"
                            FontWeight="Light"
                            Click="Button_Max_Click"/>

                    <Button Style="{StaticResource WindowButtonStyle}"
                            Content="✕"
                            FontWeight="Black"
                            Click="Button_Close_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Форма авторизации -->
        <Border Grid.Row="2"
                Grid.Column="1"
                CornerRadius="50"
                Background="#2B2B2B"
                Padding="40">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Авторизация"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,20"/>

                <!-- Поле логина -->
                <Border Grid.Row="1"
                        Background="#444444"
                        BorderBrush="#666666"
                        BorderThickness="1"
                        CornerRadius="20"
                        Padding="10"
                        Margin="0,0,0,20">
                    <Grid>
                        <TextBox Style="{StaticResource InputBoxFieldStyle}"
                                 x:Name="Email"
                                 GotFocus="Input_GotFocus"
                                 LostFocus="Input_LostFocus" />
                        <TextBlock x:Name="txtPlaceholder"
                                   Text="Логин"
                                   Foreground="DarkGray"
                                   FontSize="16"
                                   IsHitTestVisible="False"
                                   Visibility="Visible"
                                   VerticalAlignment="Center"
                                   Margin="5,0,0,0" />
                    </Grid>
                </Border>

                <!-- Поле пароля -->
                <Border Grid.Row="2"
                        Background="#444444"
                        BorderBrush="#666666"
                        BorderThickness="1"
                        CornerRadius="20"
                        Padding="10"
                        Margin="0,0,0,20">
                    <Grid>
                        <PasswordBox Style="{StaticResource InputPasswordBoxFieldStyle}"
                                     x:Name="PasswordBox"
                                     GotFocus="Input_GotFocus"
                                     LostFocus="Input_LostFocus" />
                        <TextBlock x:Name="txtPlaceholder_1"
                                   Text="Пароль"
                                   Foreground="DarkGray"
                                   FontSize="16"
                                   IsHitTestVisible="False"
                                   Visibility="Visible"
                                   VerticalAlignment="Center"
                                   Margin="5,0,0,0" />
                    </Grid>
                    
                    
                </Border>

                <!-- Кнопка входа -->
                <Button Grid.Row="3"
                        Content="Войти"
                        FontSize="16"
                        FontWeight="Bold"
                        Width="150"
                        Height="40"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,20"
                        Click="Auth_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#FF4081" />
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="Cursor" Value="Hand" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F22241"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Ссылка регистрации -->
                <TextBlock Grid.Row="4"
                           Text="Нет аккаунта? Зарегистрироваться"
                           Foreground="LightGray"
                           FontSize="20"
                           HorizontalAlignment="Center"
                           Cursor="Hand"
                           MouseDown="RegLink_Click"
                           VerticalAlignment="Top"/>
            </Grid>

            
            

        </Border>



        <!-- Кнопка переключения тем -->
        <Button Content="Переключить тему"
                Width="120"
                Height="30"
                HorizontalAlignment="Left"
                Margin="10,0,0,0"
                Click="ThemeSwitch_Click">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="{StaticResource PrimaryButtonColor}" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="Cursor" Value="Hand" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#F22241"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
    
</Window>