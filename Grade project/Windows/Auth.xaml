<Window x:Class="Grade_project.Windows.Auth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Height="720"
        Width="1080"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="{DynamicResource ContentBackgroundBrush}"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- Базовый стиль для кнопок -->
        <Style x:Key="WindowButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="35"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Foreground" Value="{DynamicResource TextForegroundBrush}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource ButtonHoverBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Стиль для текстовых полей -->
        <Style x:Key="InputBoxFieldStyle" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextForegroundBrush}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
        
        <Style x:Key="InputPasswordBoxFieldStyle" TargetType="PasswordBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextForegroundBrush}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
        
        <!-- Стиль для основной кнопки -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource PrimaryButtonBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextForegroundBrush}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F22241"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition/>
            <RowDefinition Height="2.5*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <!-- Верхняя панель -->
        <Border Grid.ColumnSpan="3" Background="{DynamicResource HeaderBackgroundBrush}" MouseDown="Window_Drag">
            <Grid HorizontalAlignment="Stretch">
                <Label VerticalAlignment="Center"
                       Foreground="{DynamicResource TextBrush}"
                       FontSize="14"
                       Margin="10,0,0,0"/>
                <StackPanel HorizontalAlignment="Right"
                            Orientation="Horizontal"
                            Margin="0,0,4,0">
                    <Button Style="{StaticResource WindowButtonStyle}"
                            Content="_"
                            FontWeight="Bold"
                            Click="Button_Min_Click"/>
                    <Button Style="{StaticResource WindowButtonStyle}"
                            Content="◻"
                            FontWeight="Light"
                            Click="Button_Max_Click"/>
                    <Button Style="{StaticResource WindowButtonStyle}"
                            Content="✕"
                            FontWeight="Black"
                            Click="Button_Close_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Форма авторизации -->
        <Border Grid.Row="2"
                Grid.Column="1"
                CornerRadius="20"
                Background="{DynamicResource SidebarBackgroundBrush}"
                Padding="40"
                Effect="{x:Null}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Авторизация"
                           Foreground="{DynamicResource TextForegroundBrush}"
                           FontSize="24"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,20"/>
                
                <!-- Поле логина -->
                <Border Grid.Row="1"
                        Background="{DynamicResource ContentBackgroundBrush}"
                        BorderBrush="{DynamicResource BorderBackgroundBrush}"
                        BorderThickness="1"
                        CornerRadius="10"
                        Padding="10"
                        Margin="0,0,0,20">
                    <Grid>
                        <TextBox Style="{StaticResource InputBoxFieldStyle}"
                                 x:Name="Email"
                                 GotFocus="Input_GotFocus"
                                 LostFocus="Input_LostFocus" />
                        <TextBlock x:Name="txtPlaceholder"
                                   Text="Логин"
                                   Foreground="{DynamicResource PlaceholderBrush}"
                                   FontSize="16"
                                   IsHitTestVisible="False"
                                   Visibility="Visible"
                                   VerticalAlignment="Center"
                                   Margin="5,0,0,0" />
                    </Grid>
                </Border>
                
                <!-- Поле пароля -->
                <Border Grid.Row="2"
                        Background="{DynamicResource ContentBackgroundBrush}"
                        BorderBrush="{DynamicResource BorderBackgroundBrush}"
                        BorderThickness="1"
                        CornerRadius="10"
                        Padding="10"
                        Margin="0,0,0,20">
                    <Grid>
                        <PasswordBox Style="{StaticResource InputPasswordBoxFieldStyle}"
                                     x:Name="PasswordBox"
                                     GotFocus="Input_GotFocus"
                                     LostFocus="Input_LostFocus" />
                        <TextBlock x:Name="txtPlaceholder_1"
                                   Text="Пароль"
                                   Foreground="{DynamicResource PlaceholderBrush}"
                                   FontSize="16"
                                   IsHitTestVisible="False"
                                   Visibility="Visible"
                                   VerticalAlignment="Center"
                                   Margin="5,0,0,0" />
                    </Grid>
                </Border>
                
                <!-- Кнопка входа -->
                <Button Grid.Row="3"
                        Content="Войти"
                        FontSize="16"
                        FontWeight="Bold"
                        Width="150"
                        Height="40"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,20"
                        Click="Auth_Click"
                        Style="{StaticResource PrimaryButtonStyle}"/>
                
                <!-- Ссылка регистрации -->
                <TextBlock Grid.Row="4"
                           Text="Нет аккаунта? Зарегистрироваться"
                           Foreground="{DynamicResource PlaceholderBrush}"
                           FontSize="20"
                           HorizontalAlignment="Center"
                           Cursor="Hand"
                           MouseDown="RegLink_Click"
                           VerticalAlignment="Top"/>
            </Grid>
        </Border>
        
        <!-- Кнопка переключения тем -->
        <Button Content="Переключить тему"
                Width="120"
                Height="30"
                HorizontalAlignment="Left"
                Margin="10,0,0,0"
                Click="ThemeSwitch_Click"
                Style="{StaticResource PrimaryButtonStyle}"/>
    </Grid>
</Window>