<Window x:Class="Grade_project.Windows.SelectRoleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Изменить роль" Height="200" Width="300">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Выберите новую роль:" Margin="0,0,0,5"/>
            <ComboBox x:Name="RoleComboBox" 
                      DisplayMemberPath="RoleName" 
                      SelectedValuePath="RoleId"
                      Margin="0,0,0,15"/>

            <Button Content="Сохранить" Click="SaveButton_Click" Width="100" HorizontalAlignment="Left" Margin="0,0,0,10"/>
            <Button Content="Отмена" Click="CancelButton_Click" Width="100" HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</Window>