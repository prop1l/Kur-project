<Window x:Class="Grade_project.Windows.AddEditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить/Редактировать пользователя"
        Height="350" Width="400"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Логин -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="10">
            <Label Content="Логин:" Width="100"/>
            <TextBox x:Name="LoginTextBox" Width="250" Margin="10,0,0,0"/>
        </StackPanel>

        <!-- Email -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="10">
            <Label Content="Email:" Width="100"/>
            <TextBox x:Name="EmailTextBox" Width="250" Margin="10,0,0,0"/>
        </StackPanel>

        <!-- Пароль -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="10">
            <Label Content="Пароль:" Width="100"/>
            <PasswordBox x:Name="PasswordBox" Width="250" Margin="10,0,0,0"/>
        </StackPanel>

        <!-- Подтверждение email -->
        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="10">
            <Label Content="Подтвержден:" Width="100"/>
            <CheckBox x:Name="IsEmailConfirmedCheckBox"
                      VerticalAlignment="Center"
                      Margin="10,0,0,0"/>
        </StackPanel>

        <!-- Кнопки управления -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="5" Margin="10">
            <Button Content="Сохранить" Click="SaveButton_Click" Width="100" Margin="0,0,10,0"/>
            <Button Content="Отмена" Click="CancelButton_Click" Width="100"/>
        </StackPanel>
    </Grid>
</Window>